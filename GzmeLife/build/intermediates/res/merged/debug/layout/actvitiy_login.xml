<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/layout_base_title" >
    </include>

    <TextView
        style="@style/tv_black_huge"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:text="PMS"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/et_phone"
        style="@style/et_transparent_full_width_black"
        android:background="@color/white"
        android:gravity="center_vertical|left"
        android:hint="请输入手机号码"
        android:inputType="number" />

    <View
        style="@style/h_line"
        android:layout_marginLeft="@dimen/spacing_tiny"
        android:layout_marginRight="@dimen/spacing_tiny" />

    <EditText
        android:id="@+id/et_pwd"
        style="@style/et_transparent_full_width_black"
        android:background="@color/white"
        android:gravity="center_vertical|left"
        android:hint="请输入密码"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_forgetPwd"
        style="@style/tv_title_normal"
        android:layout_gravity="right"
        android:background="@color/transparent"
        android:gravity="right"
        android:padding="@dimen/spacing_small"
        android:text="忘记密码？" />

    <Button
        android:id="@+id/btn_login"
        style="@style/btn_full_width_white_text_red_bg"
        android:layout_margin="@dimen/spacing_normal"
        android:background="@drawable/shape_titlecolor_bg"
        android:onClick="onClick"
        android:text="登录" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" >

        <View
            style="@style/h_line"
            android:layout_gravity="center"
            android:background="@color/gray_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/main_bg_color"
            android:padding="@dimen/spacing_small"
            android:text="你可以选择以下方式登录"
            android:textColor="@color/gray_dark" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:background="@color/transparent"
            android:drawablePadding="@dimen/spacing_small"
            android:drawableTop="@drawable/icon_login_qq"
            android:text="QQ登录"
            android:textColor="@color/gray_dark" />

        <Button
            android:id="@+id/btn_wchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:background="@color/transparent"
            android:drawablePadding="@dimen/spacing_small"
            android:drawableTop="@drawable/icon_login_wechat"
            android:text="微信登录"
            android:textColor="@color/gray_dark" />
    </LinearLayout>

</LinearLayout>