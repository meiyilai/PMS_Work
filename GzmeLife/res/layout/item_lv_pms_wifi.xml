<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/spacing_small" >

        <TextView
            android:id="@+id/tv_name"
            style="@style/tv_black_normal"
            android:layout_alignParentLeft="true"
            android:text="PMS_131223" />

        <TextView
            android:id="@+id/tv_status"
            style="@style/tv_gray_normal"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:text="未连接" />

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="@dimen/button_width_huge"
            android:layout_height="@dimen/button_height_normal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_titlecolor_bg"
            android:gravity="center"
            android:text="连接"
            android:textColor="@color/white" />
    </RelativeLayout>

    <View
        android:id="@+id/view_gap"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="#e6eaed" />

</LinearLayout>