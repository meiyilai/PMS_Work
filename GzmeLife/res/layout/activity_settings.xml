<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/layout_base_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_large"
        android:background="@color/white"
        android:paddingLeft="@dimen/spacing_normal"
        android:paddingRight="@dimen/spacing_normal" >

        <TextView
            style="@style/tv_black_normal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="信息推送" />

        <CheckBox
            android:id="@+id/cb_isOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_cb_switch"
            android:button="@null"
            android:checked="false" />
    </RelativeLayout>

    <include layout="@layout/view_gray_line" />

    <RelativeLayout        android:id="@+id/layout_clear_cash"
        style="@style/layout_person_center" >

        <TextView
            style="@style/tv_black_normal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="清理缓存" />

        <ImageView
            android:layout_width="@dimen/icon_size_tinest"
            android:layout_height="@dimen/icon_size_tinest"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />
    </RelativeLayout>

    <include layout="@layout/view_gray_line" />

    <RelativeLayout
        android:id="@+id/layout_update"
        style="@style/layout_person_center" >

        <TextView
            style="@style/tv_black_normal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="检测更新" />

        <ImageView
            android:layout_width="@dimen/icon_size_tinest"
            android:layout_height="@dimen/icon_size_tinest"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />
    </RelativeLayout>

    <include layout="@layout/view_gray_line" />

    <RelativeLayout 
        android:id="@+id/layout_system_msg"
        style="@style/layout_person_center" >

        <TextView
            style="@style/tv_black_normal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="系统消息" />

        <ImageView
            android:layout_width="@dimen/icon_size_tinest"
            android:layout_height="@dimen/icon_size_tinest"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />
    </RelativeLayout>

</LinearLayout>